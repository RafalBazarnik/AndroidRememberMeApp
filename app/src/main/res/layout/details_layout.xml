<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/task_id">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/detail_id"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="81dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/detail_task"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/detail_id"
        android:layout_alignLeft="@+id/detail_id"
        android:layout_alignStart="@+id/detail_id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/detail_data"
        android:layout_below="@+id/detail_task"
        android:layout_alignLeft="@+id/detail_task"
        android:layout_alignStart="@+id/detail_task"
        android:layout_marginTop="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/detail_status"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/detail_data"
        android:layout_alignStart="@+id/detail_data" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/detail_deadline"
        android:layout_below="@+id/detail_status"
        android:layout_alignLeft="@+id/detail_status"
        android:layout_alignStart="@+id/detail_status"
        android:layout_marginTop="37dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/detail_priority"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/detail_deadline"
        android:layout_alignLeft="@+id/detail_deadline"
        android:layout_alignStart="@+id/detail_deadline" />
</RelativeLayout>