<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/background"
    android:id="@+id/task_id">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/detail_id"
        android:layout_marginTop="83dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/listenButton"
        android:layout_toStartOf="@+id/listenButton"
        android:layout_marginRight="48dp"
        android:layout_marginEnd="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/detail_task"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/detail_id"
        android:layout_alignLeft="@+id/detail_id"
        android:layout_alignStart="@+id/detail_id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/detail_data"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignLeft="@+id/detail_task"
        android:layout_alignStart="@+id/detail_task" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/detail_status"
        android:layout_above="@+id/detail_priority"
        android:layout_alignLeft="@+id/detail_data"
        android:layout_alignStart="@+id/detail_data"
        android:layout_marginBottom="58dp" />

    <!--<TextView-->
